
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Todo list{% endblock %}-Index</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:500" rel="stylesheet">
    {% endblock %}
</head>
<body>
<header>
    <h1>Todo list</h1>
</header>
{% block body %}
    {% block todo %}
        {% if todosTodo|length > 0 %}
        <div id="display">
            <p>Todos : <span id="number todos">{{ todosTodo|length }}</span></p>
        </div>
        {% else %}
        <div id="display">
            <p>Nothing to do ! :)</p>
        </div>
        {% endif %}

    {% endblock %}

    {% block list %}
        {% for todo in todos if todo.done == false %}
         <div class="displayTodo">
            <h3>{{ todo.title }}</h3>
            <p>{{ todo.content }}</p>
            <em>{{ todo.date|date("d/m/Y") }}</em>

            {% include '_done_button.html.twig' %}
         </div>
        {% endfor %}
    {% endblock %}
{% endblock %}


{% block javascripts %}{% endblock %}
</body>
</html>
